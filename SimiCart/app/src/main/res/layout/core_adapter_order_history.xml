<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_5"
    android:paddingRight="@dimen/size_5"
    android:paddingTop="@dimen/size_5"
    android:id="@+id/rl_item_order">

    <LinearLayout
        android:id="@+id/ll_item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_30"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_5"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Order Status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="PENDING"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_5"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Order Date"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="29-040-2014 08:24:45" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_5"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_recipient_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Recipient"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_recipient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Alo 1234" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_5"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_items_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Items"
                    android:textStyle="bold" />
            </TableRow>

            <LinearLayout
                android:id="@+id/ll_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="0dp"
                android:paddingTop="@dimen/size_5">

                <TextView
                    android:id="@+id/tv_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/core_bullet"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/core_bullet"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/core_bullet"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_extend"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_extend" />

    <View
        android:id="@+id/v_menu"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E8E8E8"
        android:layout_below="@+id/ll_item_order"
        android:layout_marginTop="@dimen/size_5"/>

</RelativeLayout>