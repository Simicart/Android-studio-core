<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_address_component"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_10"
        android:paddingTop="@dimen/size_10"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/billing_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_7"
            android:contentDescription="@null"
            android:scaleType="centerInside" />


        <!--  name -->

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_name"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:contentDescription="@null"
                android:padding="@dimen/size_1"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/size_2"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
        <!--  street -->

        <LinearLayout
            android:id="@+id/ll_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_name"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_street"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:contentDescription="@null"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <!--  phone -->

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_street"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:contentDescription="@null"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <!--  email -->

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_phone"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:contentDescription="@null"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>